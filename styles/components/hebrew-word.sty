% Hebrew Word Comparison Component
% Card-style design with visual separation for English, Hebrew, and pronunciation
% Usage: \hebrewword{English}{Hebrew}{Pronunciation}{Definition}

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{hebrew-word}[2025/01/01 Hebrew Word Comparison Component]

% Hebrew font and command are defined in main style file

% Hebrew word comparison command - Simple layout without TikZ
\newcommand{\hebrewword}[4]{%
    % #1 = English word
    % #2 = Hebrew text  
    % #3 = Pronunciation
    % #4 = Definition/description (optional - if empty, no definition box)
    \par\vspace{4pt}%
    \noindent%
    % Main container using mdframed - more compact
    \begin{mdframed}[
        linewidth=1.5pt,
        linecolor=bordercolor,
        roundcorner=8pt,
        innerleftmargin=8pt,
        innerrightmargin=8pt,
        innertopmargin=8pt,
        innerbottommargin=8pt,
        backgroundcolor=blue!5
    ]
        % Three element boxes using colorbox with reduced height
        \begin{center}
        \colorbox{white}{\makebox[0.28\linewidth][c]{\raisebox{-0.2ex}[1.8ex][1.2ex]{\textbf{#1}}}}%
        \hspace{0.02\linewidth}%
        \colorbox{lightyellowbg}{\makebox[0.28\linewidth][c]{\raisebox{-0.2ex}[1.8ex][1.2ex]{\textbf{\large \hebrew{#2}}}}}%
        \hspace{0.02\linewidth}%
        \colorbox{lightbluebg}{\makebox[0.28\linewidth][c]{\raisebox{-0.2ex}[1.8ex][1.2ex]{\textit{#3}}}}%
        \end{center}
        
        % Only show definition section if #4 is not empty
        \ifx&#4&%
            % No definition provided, skip the definition box
        \else
            \vspace{6pt}
            % Definition section - more compact
            \begin{mdframed}[
                linewidth=1pt,
                linecolor=gray!50,
                roundcorner=6pt,
                innerleftmargin=8pt,
                innerrightmargin=8pt,
                innertopmargin=6pt,
                innerbottommargin=6pt,
                backgroundcolor=lightgreenbg
            ]
                \textbf{Definition:} #4
            \end{mdframed}
        \fi
    \end{mdframed}
    \par\vspace{6pt}%
}

\endinput