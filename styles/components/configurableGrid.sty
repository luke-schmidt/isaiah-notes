% Configurable 4-Box Grid Component - Version 4: Four Box Layout
% Creates a tall-short-short-tall layout with subtle, elegant styling

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{configurableGrid}[2025/08/21 Configurable 4-Box Grid v4]

\RequirePackage{tikz}
\usetikzlibrary{shadows}

% Command: \configurableGrid{highlighted_box}{title}{left_text}{center_left_text}{center_right_text}{right_text}
% highlighted_box: 1, 2, 3, or 4 for which box to highlight
\newcommand{\configurableGrid}[6]{%
    \par\vspace{15pt}%
    % Minimalist title
    \begin{center}
        \textcolor{black}{\bfseries\Large #2}
        \vspace{3pt}
        
        \textcolor{gray}{\rule{4cm}{0.5pt}}
    \end{center}
    \vspace{20pt}
    
    % Four boxes with minimal styling
    \noindent
    % Box 1: Left (TALL - 6.5cm)
    \begin{minipage}[t]{0.23\linewidth}
        \ifnum#1=1
            \begin{tikzpicture}
            \node[
                draw=black, line width=2pt, rounded corners=8pt, inner sep=15pt,
                fill=gray!8, text width=\linewidth-30pt,
                minimum height=6.5cm, anchor=north west
            ] at (0,0) {
                #3
            };
            \end{tikzpicture}
        \else
            \begin{tikzpicture}
            \node[
                draw=gray!40, line width=1pt, rounded corners=8pt, inner sep=15pt,
                fill=white, text width=\linewidth-30pt,
                minimum height=6.5cm, anchor=north west
            ] at (0,0) {
                #3
            };
            \end{tikzpicture}
        \fi
    \end{minipage}%
    \hfill
    % Box 2: Center Left (SMALL - 4.5cm)
    \begin{minipage}[t]{0.23\linewidth}
        \ifnum#1=2
            \begin{tikzpicture}
            \node[
                draw=black, line width=2pt, rounded corners=8pt, inner sep=15pt,
                fill=gray!8, text width=\linewidth-30pt,
